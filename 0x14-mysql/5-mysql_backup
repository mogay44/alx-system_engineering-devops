#!/bin/bash

# Check if the password argument is provided
if [ "$#" -ne 1 ]; then
    echo "Usage: $0 <root_password>"
    exit 1
fi

# Get today's date in the format day-month-year
DATE=$(date +%d-%m-%Y)

# Define the MySQL root password
ROOT_PASSWORD="$1"

# Generate the MySQL dump
echo "Generating MySQL dump..."
mysqldump -u root -p"$ROOT_PASSWORD" --all-databases > backup.sql

# Compress the dump into a tar.gz archive
echo "Compressing dump..."
tar czvf "${DATE}.tar.gz" backup.sql

# Remove the uncompressed dump file
rm backup.sql

echo "Backup completed successfully."
